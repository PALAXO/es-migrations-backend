{
  "options": {
    "maxSnapshotBytesPerSec": "1gb",
    "parallelization": {
      "targetProcesses": 2,
      "targetWorkersToCPUs": 0.4,
      "allowWorkersConcurrency": true,
      "workerRAMLimitMiB": 1000
    },
    "parallelProcesses": 2,
    "threads": 0.5,
    "reportSeconds": 60,
    "limits": {
      "bulk": {
        "minSize": 10,
        "defaultSize": 1000,
        "maxSize": 10000
      },
      "maxScriptChains": 2,
      "maxIndexDeletes": 5
    },
    "optimizations": {
      "restrictions": {
        "replicas": true,
        "refreshes": true
      },
      "targetBulkSize": {
        "enabled": true,
        "targetMB": 25,
        "sampleSize": 10
      },
      "alwaysNewIndices": {
        "bulk": false,
        "script": false
      }
    },
    "blockIndices": true
  },
  "backup": {
    "onlyUsedIndices": true,
    "backupInputIndices": true,
    "location": "./es_backup",
    "repository": "es-migrations-backup",
    "snapshotPrefix": "migration"
  },
  "es": {
    "requestTimeoutSeconds": 900,
    "pingTimeoutSeconds": 90,
    "maxRetries": 5,
    "correctSettings": true,
    "retries":  {
      "base": 2.0,
      "maxRetries": 10
    },
    "checkIntervals": {
      "snapshot": 2500,
      "restore": 2500,
      "task": 2500
    }
  },
  "logs": {
    "migrations": {
      "name": "migrations",
      "streams": [
        {
          "level": "info",
          "type": "console"
        }
      ]
    },
    "elasticsearch": {
      "name": "elasticsearch",
      "streams": [
        {
          "level": "error",
          "type": "console"
        }
      ]
    }
  }
}