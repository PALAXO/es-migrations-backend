{
  "options": {
    "maxSnapshotBytesPerSec": "1gb",
    "parallelization": {
      "processes": 2,
      "process": {
        "workerThreadConcurrency": 3,
        "workersPerESThread": 1,
        "ramPerESThreadGiB": 1,
        "ramPerWorkerGiB": 1,
        "maximumTotalLoad": 1.75,
        "hostLoadExponent": 0.1,
        "nodesLoadExponent": 0.2,
        "defaultNodeThreads": 8,
        "defaultNodeRamGiB": 12,
        "maximumESLoad": 1
      }
    },
    "reportSeconds": 60,
    "limits": {
      "bulk": {
        "minSize": 10,
        "defaultSize": 1000,
        "maxSize": 10000
      },
      "maxScriptChains": 2,
      "maxIndexDeletes": 5
    },
    "optimizations": {
      "targetBulkSize": {
        "enabled": true,
        "targetMB": 25,
        "sampleSize": 25
      },
      "alwaysNewIndices": {
        "bulk": false,
        "script": false
      }
    },
    "blockIndices": {
      "read": false,
      "write": true
    }
  },
  "backup": {
    "onlyUsedIndices": true,
    "backupInputIndices": true,
    "location": "./es_backup",
    "repository": "es-migrations-backup",
    "snapshotPrefix": "migration"
  },
  "es": {
    "requestTimeoutSeconds": 7200,
    "pingTimeoutSeconds": 90,
    "maxRetries": 5,
    "correctSettings": true,
    "retries":  {
      "base": 2.0,
      "maxRetries": 10
    },
    "checkIntervals": {
      "snapshot": 2500,
      "restore": 2500,
      "task": 2500
    },
    "restore": {
      "maxRetries": 3,
      "waitTime": 30000
    }
  },
  "logs": {
    "migrations": {
      "name": "migrations",
      "streams": [
        {
          "level": "info",
          "type": "console"
        }
      ]
    },
    "elasticsearch": {
      "name": "elasticsearch",
      "streams": [
        {
          "level": "error",
          "type": "console"
        }
      ]
    }
  }
}
